{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"], // Ensure this is correct
    "types": [] // Ensure this is empty if not using specific custom types
  },
  "include": ["**/*.ts", "**/*.d.ts"], // Include all TypeScript files
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude node_modules and test files
}
